@{
    ViewBag.Title = "Recuperar";
}

@using (Html.BeginForm("Recuperar", "ArchiveUsersModels", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <h2>Recuperar arquivo</h2>
            <hr />
            <h2>@TempData["Sucesso"]</h2>

            <label for="key">Insira a senha do arquivo selecionado:</label>
            <input type="password" name="userKey" id="userKey" /><br /><br />

            <input type="submit" class="btn btn-toolbar" value="Recuperar" />
        </div>
    </div>
}