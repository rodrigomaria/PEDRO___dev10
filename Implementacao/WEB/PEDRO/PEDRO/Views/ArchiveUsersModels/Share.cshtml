@model PEDRO.Models.ArchiveUsersModels

@{
    ViewBag.Title = "Compartilhar";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Compartilhar arquivo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" id="arquivoId" name="arquivoId" value="@Model.id" />

        <div class="form-group">
            <div class="control-label col-md-2">E-mail do usuário:</div>
            <div class="col-md-10">
                    <input type="text" id="email" name="email" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Compartilhar" class="btn btn-default" />
            </div>
        </div>
    </div>
}