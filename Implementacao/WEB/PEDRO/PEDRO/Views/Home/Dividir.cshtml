
@{
    ViewBag.Title = "Dividir";
}

@using (Html.BeginForm("Dividir", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <h2>Dividir arquivo</h2>
            <hr />
            <h2>@TempData["Sucesso"]</h2>

            <input type="file" name="file" class="open" id="file" /><br>

            <label for="key">Informe em quantas partes deseja dividir o arquivo:</label>
            <input type="text" name="numeroDePartes" id="numeroDePartes" /><br /><br />

            <input type="submit" class="btn btn-toolbar" value="Dividir" />
        </div>
    </div>
}
